   <children>
      <Button mnemonicParsing="false" prefHeight="134.0" prefWidth="112.0" styleClass="transparent">
         <graphic>
            <ImageView fx:id="bookImage" fitHeight="126.0" fitWidth="88.0" pickOnBounds="true" preserveRatio="true" styleClass="transparent">
               <image>
                  <Image url="@../image/oremoi.jpg" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <VBox prefHeight="100.0" prefWidth="155.0" spacing="8.0">
         <children>
            <Label fx:id="bookName" prefHeight="46.0" prefWidth="142.0" text="My sister can't be this cute" wrapText="true">
               <font>
                  <Font name="Gill Sans MT Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="AuthorName" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="17.0" prefWidth="150.0" text=" Author: Tsukasa Fushimi">
