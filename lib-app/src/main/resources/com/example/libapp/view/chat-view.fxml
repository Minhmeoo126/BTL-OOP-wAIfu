<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.libapp.controllers.Chat" spacing="10" alignment="CENTER">
    <TextArea fx:id="chatArea" editable="false" prefHeight="300" prefWidth="400" wrapText="true"/>
    <TextField fx:id="inputField" promptText="Nhập yêu cầu gợi ý sách (ví dụ: sách khoa học viễn tưởng)" prefWidth="300"/>
    <Button text="Gửi" onAction="#handleSend"/>
</VBox>