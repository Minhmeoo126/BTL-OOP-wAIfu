<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.libapp.controllers.SearchBookController" spacing="10" alignment="CENTER">
    <TextField fx:id="searchField" promptText="Search by title or author"/>
    <Button text="Search" onAction="#handleSearch"/>
    <TableView fx:id="bookTable">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title"/>
            <TableColumn fx:id="authorColumn" text="Author"/>
            <TableColumn fx:id="categoryColumn" text="Category"/>
            <TableColumn fx:id="totalCopiesColumn" text="Total Copies"/>
            <TableColumn fx:id="availableCopiesColumn" text="Available Copies"/>
        </columns>
    </TableView>
    <Button text="Back to Main" onAction="#backToMain"/>
</VBox>


